@model List<OgrenciTable>


<div class="row mb-2">
    <div class="col-sm-6">
        <h1>Ögrenci</h1>
    </div>

    <div class="col-sm-6">

        <a asp-controller="OgrenciTable" asp-action="Create" class="btn btn-app  bg-warning float-sm-right">
            <i class="fas fa-inbox"></i> Ögrenci Oluştur
        </a>


    </div>
</div>

<!-- /.card-header -->

<div class="card">
    <div class="card-header">
        <h3 class="card-title"></h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>id</th>
                    <th>ad</th>
                    <th>soyad</th>
                    <th>işlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.ad</td>
                        <td>@item.soyad</td>
                        <td>
                            <a class="btn btn-info btn-sm" asp-action="Update" asp-route-id="@item.id">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Güncelle
                            </a>

                            <a class="btn btn-danger btn-sm" asp-action="Delete" onclick="deleteAlert()" asp-route-id="@item.id">
                                <i class="fas fa-trash">
                                </i>
                                Sil
                            </a>
                        </td>

                    </tr>
                }
            </tbody>

        </table>
    </div>
    <!-- /.card-body -->
</div>
